{{if data.active_template}}
    <b>Loaded template:</b> {{:data.active_template}}
{{else}}
    <span class='average'><i>No VR template loaded.</i></span>
{{/if}}
<h3><u>Connected occupants</u></h3>
<table>
{{for data.occupants}}
    <tr>
    <td>{{:helper.link("Message", null, {'msg_occupant': value.mob_ref})}}
    <td>{{:value.name}}
{{empty}}
    <tr>
    <td>None.
{{/for}}
</table>
{{:helper.link("Message all occupants", 'signal-diag', {'msg_all_occupants' : 1})}}
<h3><u>Available areas</u></h3>
<table>
{{for data.templates}}
    <tr>
    <td>{{:helper.link("Activate", null, {'load_template': value.name}, data.on_cooldown ? 'disabled' : null)}}
    <td>{{:value.name}}
{{empty}}
    <tr>
    <td>None.
{{/for}}
</table>
{{if data.emag_templates}}
    <h3><span class='bad'><u>Nonstandard areas</u></span></h3>
    <table>
    {{for data.emag_templates}}
        <tr>
        <td>{{:helper.link("Activate", null, {'load_template': value.name}, data.on_cooldown ? 'disabled' : null)}}
        <td>{{:value.name}}
    {{/for}}
    </table>
{{/if}}