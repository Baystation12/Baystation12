[merge "merge-dmm"]
    name = mapmerge driver
    driver = ./mapmerge.sh %O %A %B
    recursive = text

[merge]
    tool = kdiff3

[mergetool "kdiff3"]
    path = C:\Program Files\KDiff3\kdiff3.exe
    keepBackup = false
    trustExitCode = false
	
[merge]
    tool = tkdiff

[mergetool "tkdiff"]
    path = C:\Program Files (x86)\TkDiff\tkdiff.exe
    keepBackup = false
    trustExitCode = false
	
[merge]
    tool = p4merge

[mergetool "p4merge"]
    path = C:\Program Files\Perforce\p4merge.exe
    keepBackup = false
    trustExitCode = false